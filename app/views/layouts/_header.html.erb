<div id="header" class="round">
	
	
	<ul class="navigation round">
		<li><%= link_to "Home", root_path %></li>
		<% if signed_in? %>
		  <li><%= link_to "Profile", current_user %></li>
		  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
		  <li><%= link_to "Portfolio", :controller => "pages", :action => "show_portfolios", :id => current_user %></li>
		  <li><%= link_to "Dashboard", :controller => "pages", :action => "show_dashboard", :id => current_user %></li>
		<% end %>
		<li><%= link_to "Help", 'help_path' %></li>
		<% if signed_in? %>
		  <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
		<% else %>
		  <li><%= link_to "Sign in", signin_path %></li>
		<% end %>
	</ul>
</div>