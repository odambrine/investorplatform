<% form_for @portfolio do |f| %>
  <%= f.error_messages %>
 
	  <div class="span-5">
	  	<%= f.label :name %><br />
	    <%= f.date_select :name %>
	  </div>
	
	  <div class="span-3">
		<%= f.label :show_in_graph %><br />
		<%= f.check_box :show_in_graph %>
	  </div>
	
	  <div class="span-3">
	  	<%= f.label :admin %><br />
	    <%= f.check_box :admin %>
	  </div>
	
	<div class="span-2">
	  	<%= f.label :benchmark %><br />
	    <%= f.select :benchmark, Security::BENCHMARKS %>
	  </div>

  <div class="span-2">
  	<br/>
	<%= f.submit "Submit" %>
  </div>
<% end %>