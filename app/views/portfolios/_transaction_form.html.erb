<% form_for @transaction do |f| %>
  <%= f.error_messages %>
 
	  <div class="span-7">
	  	<%= f.label :date %><br />
	    <%= f.date_select :date %>
	  </div>
	
	
	  <div class="span-4">
	    <%= f.label :security %><br />
	    <%= text_field_with_auto_complete :security, :description, :size => 10 %>	
	  </div>
	
	  <div class="span-3">
	  	<%= f.label :operation %><br />
	    <%= f.select :operation, Transaction::OPERATION_TYPES, :prompt => "Buy/sell/Dividend", :size => 8 %>
		
	  </div>
	
	  <div class="span-2">
	  	<%= f.label :quantity %><br />
	    <%= f.text_field :quantity, :size => 5 %>
	  </div>
	
	  <div class="span-2">
	  	<%= f.label :price %><br />
	    <%= f.text_field :price, :size => 5 %>
	  </div>
	
	  <div class="span-2">
	  	<%= f.label :cost %><br />
	    <%= f.text_field :cost, :size => 5 %>
	  </div>
	
	
	
	  <%= hidden_field_tag :portfolio_id, @transaction.portfolio_id %>

  <div class="span-3">
  	<%= f.submit "Submit" %>
  </div>
<% end %>